# EditorConfig: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Trim trailing whitespace
[*]
trim_trailing_whitespace = true

# Set default charset
[*]
charset = utf-8

# Set default indentation
[*]
indent_style = tab
indent_size = 4

# Set indentation size for HTML/XML files
[*.{html,htm,xhtml,xml}]
indent_size = 2

# Set indentation style for YAML files
[*.{yaml,yml}]
indent_style = space
